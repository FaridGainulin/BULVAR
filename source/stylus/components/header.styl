.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    color: $color-white

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.md)
      gap: 14px
    +above($breakpoints.xxl)
      gap: 17px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 2px

  &__logo
    width 74px
    height: 73px
    +above($breakpoints.sm)
      width 120px
      height: auto
    +above($breakpoints.md)
      width 160px
    +above($breakpoints.xxl)
      width 188px
      height: 184px

  &__connection
    display: flex
    align-items: center
    justify-content center
    background-color $color-grey
    border-radius: 5px
    gap: 6px
    width 155px
    height: 30px
    +above($breakpoints.sm)
      gap: 8px;
      width 170px
      height: 35px
    +above($breakpoints.md)
      gap: 10px;
      width 215px
      height: 40px
    +above($breakpoints.xxl)
      gap: 15px
      width 240px
      height: 44px

  &__connection-icon
    width 11px
    height: 11px
    +above($breakpoints.md)
      width 12px
      height: 12px
    +above($breakpoints.md)
      width 14px
      height: 14px
    +above($breakpoints.xxl)
      width 16px
      height: 15px
