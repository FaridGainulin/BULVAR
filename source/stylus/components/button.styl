.btn
  height: 55px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #fff
  border-radius: 5px
  background: #979596
  text-transform: uppercase
  font-family: 'Inter-Regular'
  font-weight: 400
  font-size: 14px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  text-align: center
  +above($breakpoints.sm)
    font-size: 16px;
    height: 65px;
  +above($breakpoints.md)
    font-size: 20px;
    height: 75px;
  +above($breakpoints.xxl)
    font-size: 24px;
    height: 89px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%
